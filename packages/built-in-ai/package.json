{
  "name": "@built-in-ai/core",
  "version": "2.0.0",
  "description": "Browser Built-in AI API provider for Vercel AI SDK v5+ (Chrome & Edge)",
  "author": {
    "name": "Jakob Hoeg MÃ¸rk",
    "url": "https://jakobhoeg.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jakobhoeg/built-in-ai.git",
    "directory": "packages/built-in-ai"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run clean && tsup",
    "build:prod": "tsup",
    "build:test": "npm run test:run && tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "dev:example": "npm run build && npm run -w examples/next-hybrid dev"
  },
  "keywords": [
    "ai",
    "ai-sdk",
    "vercel",
    "browser-ai",
    "built-in-ai",
    "chrome",
    "edge",
    "prompt-api",
    "language-model"
  ],
  "license": "Apache License",
  "dependencies": {
    "@mediapipe/tasks-text": "^0.10.22-rc.20250304"
  },
  "peerDependencies": {
    "ai": ">=5.0.0"
  },
  "devDependencies": {
    "@types/dom-chromium-ai": "^0.0.9",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "jsdom": "^26.1.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0",
    "zod": "^3.25.76"
  },
  "publishConfig": {
    "access": "public"
  }
}